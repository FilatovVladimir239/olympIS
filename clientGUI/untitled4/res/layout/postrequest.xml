<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="wrap_content">
    <TableLayout android:id="@+id/table" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="2dip">
            <Spinner android:id="@+id/competitionSpinner" android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:entries="@array/sport_array" android:prompt="@string/sport_event"></Spinner>
            <EditText android:layout_weight="0.5" android:textSize="10sp" android:lines="2" android:text="Осталось: 20/20" android:textColor="#FFD700" android:background="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="1dip" android:layout_marginRight="1dip"></EditText>
        </LinearLayout>
        <EditText android:id="@+id/text1" android:hint="Name" android:textColor="#000000" android:background="#FFFFFFFF" android:layout_margin="2dip"/>
        <EditText android:id="@+id/text2" android:hint="не важно" android:textColor="#000000" android:background="#FFFFFFFF" android:layout_margin="2dip"/>
        <Button android:id="@+id/add_button" android:text="+" android:layout_margin="2dip"/>
        <HorizontalScrollView android:id="@+id/horizontalScrollView1" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TableLayout android:id="@+id/table1" android:background="#DAA520" android:layout_width="fill_parent" android:layout_height="fill_parent">
                <!-- тут такой же TableRow, как и в tabelrow.hml, только с нужными заголовками(имя, соревнование,...) -->
                <TableRow xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="horizontal" android:layout_margin="2dip">
                    <EditText android:id="@+id/text1" android:text="Name" android:textColor="#FFD700" android:background="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="1dip" android:layout_marginRight="1dip" android:layout_marginBottom="1dip"></EditText>
                    <EditText android:id="@+id/text2" android:text="не важно" android:textColor="#FFD700" android:background="#000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="1dip" android:layout_marginBottom="1dip"></EditText>
                </TableRow>
            </TableLayout>
        </HorizontalScrollView>
    </TableLayout>
</ScrollView>